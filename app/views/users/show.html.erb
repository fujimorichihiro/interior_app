<h1><%= @user_name %>の Page</h1>

<div class="row">
  <table class="table">
    <tbody>
    <% @posts.each do |post| %>
    <tr>
      <td><%= post.title %></td>
      <td><div class="btn btn-danger">削除</div></td>
    </tr>
    <% end %>
    </tbody>
  </table>
</div>

<div class="row">
  <h3>投稿する</h3>
	<%= form_for @new_post do |f| %>
    <div class="form-group">
      <p>タイトル</p>
      <%= f.text_field :title %>
    </div>
    <div class="form-group">
      <p>内容</p>
      <%= f.text_area :body %>
    </div>
    <div class="form-group">
      <p>画像</p>
      <%= f.attachment_field :post_image %>
    </div>
    <%= f.submit %>
  <% end %>

</div>
